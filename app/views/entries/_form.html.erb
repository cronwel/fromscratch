<%= form_with model: @entry, local: true do |form| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= pluralize(@entry.errors.count, 'error') %>
        Entry could not be saved:
      </h3>
      <ul>
        <%= @entry.errors.full_mssages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title  %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
